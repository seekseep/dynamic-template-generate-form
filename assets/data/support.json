{
  "form": {
    "sections": [
      {
        "label": "基本情報",
        "condition": null,
        "fields": [
          {
            "label": "優先度",
            "type": "select",
            "required": true,
            "options": [
              "-- 選択してください --",
              "低",
              "中",
              "高",
              "緊急"
            ]
          },
          {
            "label": "お名前",
            "type": "text",
            "required": true
          },
          {
            "label": "メールアドレス",
            "type": "email",
            "required": true
          }
        ]
      },
      {
        "label": "問題の詳細",
        "condition": null,
        "fields": [
          {
            "label": "関連する製品/サービス",
            "type": "select",
            "required": true,
            "options": [
              "-- 選択してください --",
              "製品A",
              "製品B",
              "サービスA",
              "サービスB"
            ]
          },
          {
            "label": "問題の種類",
            "type": "select",
            "required": true,
            "options": [
              "-- 選択してください --",
              "バグ報告",
              "機能リクエスト",
              "アカウント関連",
              "性能問題",
              "その他"
            ]
          },
          {
            "label": "件名",
            "type": "text",
            "required": true
          },
          {
            "label": "問題の説明",
            "type": "textarea",
            "required": true
          }
        ]
      },
      {
        "label": "追加情報",
        "condition": null,
        "fields": [
          {
            "label": "影響を受けた機能",
            "type": "checkbox",
            "required": false,
            "options": [
              "UI/UX",
              "パフォーマンス",
              "セキュリティ",
              "統合",
              "その他"
            ]
          },
          {
            "label": "環境",
            "type": "text",
            "required": false
          },
          {
            "label": "再現手順",
            "type": "textarea",
            "required": false
          }
        ]
      },
      {
        "label": "連絡先情報",
        "condition": null,
        "fields": [
          {
            "label": "ご希望の連絡方法",
            "type": "radio",
            "required": true,
            "options": [
              "メール",
              "電話",
              "チャット"
            ]
          },
          {
            "label": "電話番号",
            "type": "tel",
            "required": false
          }
        ]
      }
    ]
  },
  "template": {
    "sections": [
      {
        "label": "基本情報",
        "condition": null,
        "content": "【基本情報】\n優先度: {{ticket_priority}}\nお名前: {{name}}\nメールアドレス: {{email}}\n"
      },
      {
        "label": "問題の詳細",
        "condition": null,
        "content": "【問題の詳細】\n関連製品/サービス: {{product}}\n問題の種類: {{issue_type}}\n件名: {{subject}}\n説明:\n{{description}}\n"
      },
      {
        "label": "追加情報",
        "condition": null,
        "content": "【追加情報】\n影響を受けた機能: {{affected_features}}\n環境: {{environment}}\n再現手順:\n{{steps_to_reproduce}}\n"
      },
      {
        "label": "連絡先情報",
        "condition": null,
        "content": "【連絡先情報】\nご希望の連絡方法: {{contact_method}}\n電話番号: {{phone}}\n"
      }
    ]
  }
}
